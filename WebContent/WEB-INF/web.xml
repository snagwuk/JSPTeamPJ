<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <jsp-config>
    <jsp-property-group>
      <url-pattern>/view/*</url-pattern>
      <include-prelude>/common/head.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
  <servlet>
    <servlet-name>CourseController</servlet-name>
    <servlet-class>controller.CourseController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CourseController</servlet-name>
    <url-pattern>/course/*</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>util.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>utf-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AdminCheckFilter</filter-name>
    <filter-class>util.AdminCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AdminCheckFilter</filter-name>
    <url-pattern>/member/adminpage</url-pattern>
    <url-pattern>/course/trainerlist</url-pattern>
    <url-pattern>/member/list</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>util.LoginCheckFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>LoginCheckFilter</filter-name>
    <url-pattern>/course/apply</url-pattern>
    <url-pattern>/course/mylist</url-pattern>
    <url-pattern>/member/mypage</url-pattern>
    <url-pattern>/member/changeinfo</url-pattern>
    <url-pattern>/minwon/write</url-pattern>
    <url-pattern>/minwon/mylist</url-pattern>
    <url-pattern>/rent/mylist</url-pattern>
    <url-pattern>/rent/rent</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>MemberController</servlet-name>
    <servlet-class>controller.MemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberController</servlet-name>
    <url-pattern>/member/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MinwonController</servlet-name>
    <servlet-class>controller.MinwonController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MinwonController</servlet-name>
    <url-pattern>/minwon/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RentController</servlet-name>
    <servlet-class>controller.RentController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RentController</servlet-name>
    <url-pattern>/rent/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MainController</servlet-name>
    <servlet-class>controller.MainController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainController</servlet-name>
    <url-pattern>/main/*</url-pattern>
  </servlet-mapping>
</web-app>